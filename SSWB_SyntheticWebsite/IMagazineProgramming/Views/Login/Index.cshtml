<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Imagazine Login! | </title>
    <!-- Bootstrap core CSS -->
    <link href="~/Plugin/AdminTemplate/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugin/AdminTemplate/fonts/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Plugin/AdminTemplate/css/animate.min.css" rel="stylesheet" />
    <!-- Custom styling plus plugins -->
    <link href="~/Plugin/AdminTemplate/css/custom.css" rel="stylesheet" />
    <link href="~/Plugin/AdminTemplate/css/icheck/flat/green.css" rel="stylesheet" />
    <script src="~/Plugin/AdminTemplate/js/jquery.min.js"></script>
    <link href="~/Content/style-content.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="../assets/js/ie8-responsive-file-warning.js"></script>
        <![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body style="background:#F7F7F7;">

    <div class="">
        <a class="hiddenanchor" id="toregister"></a>
        <a class="hiddenanchor" id="tologin"></a>
        <div id="wrapper">
            <div id="login" class="animate form">
                <section class="login_content">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <h1>Đăng Nhập Hệ Thống</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Tên đăng nhập" required="" name="user" />
                        </div>
                        <div><label>@ViewBag.Err</label></div>
                        <div>
                            <input type="password" class="form-control" placeholder="Mật khẩu" required="" name="pass" />
                        </div>
                        <div>
                            <div class="col-xs-6"><input type="submit" class="btn btn-default submit" id="linkLogin" href="" value="Đăng Nhập ?" /></div>
                            <div class="col-xs-6"><a class="reset_pass" href="#" style="">Quên mật khẩu ?</a></div>

                        </div>
                        <script>
                            document.getElementById('linkLogin').href = window.location.origin + "/Admin/Index";
                        </script>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                <a href="" id="linkHomePage">  Sang Trang Chủ |</a>
                                <a href="#toregister" class="to_register">Tạo Tài Khoản</a>
                            </p>
                            <script>
                                document.getElementById('linkHomePage').href = window.location.origin + "/Home/Index";
                            </script>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-paw" style="font-size: 26px;"></i> Imagazine-Programming!</h1>
                                <p>©2015 All Rights Reserved.Imagazine Programming Professional</p>
                            </div>
                        </div>
                    }
                    <!-- form -->
                </section>
                <!-- content -->
            </div>
            <div id="register" class="animate form">
                <section class="login_content">
                    <form>
                        <h1>Tạo Tài Khoản</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Tên đăng nhập" required="" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Email" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Mật khẩu" required="" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="index.html">Đăng Ký</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                                Đã là thành viên ?
                                <a href="#tologin" class="to_register"> Đăng Nhập </a>
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><i class="fa fa-paw" style="font-size: 26px;"></i> Imagazine-Programming!</h1>
                                <p>©2015 All Rights Reserved.Imagazine Programming Professional</p>
                            </div>
                        </div>
                    </form>
                    <!-- form -->
                </section>
                <!-- content -->
            </div>
        </div>

    </div>
</body>
</html>